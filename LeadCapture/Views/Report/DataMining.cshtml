@using IDC.LeadCapture.BLL
@{
    ViewBag.Title = ResourceCache.Localize("DX LG | Data Mining");
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="slice bg-white">
    <div class="wp-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title-wr style-3">
                        <h3 class="section-title left"><span>@ResourceCache.Localize("Data Mining")</span></h3>
                    </div>
                    <p><font color="red">*</font> @ResourceCache.Localize("required_field_msg")</p>
                    <hr>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-body">
                                <form action="" id="frmLogin" class="sky-form">
                                    <div class="form-group">
                                        <label class="label"><strong>@ResourceCache.Localize("dt_title")</strong> <font color="red">*</font></label>
                                        <label class="input">
                                            <i class="icon-append fa fa-calendar"></i>
                                            <input type="text" id="dm-daterange" class="form-control">
                                        </label>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-12">
                            <h5>@ResourceCache.Localize("CSV Report Columns")</h5>
                            <p>@ResourceCache.Localize("csv_columns")</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <hr>
                <div class="col-md-12">
                    <br />
                    <button type="button" onclick="location.href='@Url.Action("Index", "Admin")'" class=" btn btn-icon btn-base fa-chevron-left" style="min-width:150px;padding-left:30px;">@ResourceCache.Localize("navigation_back_en")</button>
                    &nbsp;&nbsp;
                    <button type="button" onclick="download(this, '@Url.Action("DataMiningReport", "Report", new { daterange = "dt" })')" class="btn btn-icon btn-base btn-icon-right fa-download" style="min-width:150px;padding-right:40px;">@ResourceCache.Localize("Download")</button>
                </div>
            </div>
        </div>
    </div>
</section>

@section styles {
    @Styles.Render("~/Content/dx/css/font-awesome.css")
    @Styles.Render("~/Content/dx/css/daterangepicker.css")
    @Styles.Render("~/Content/dx/css/ace-fonts.css")

    <style>
        #main {
            margin-left: 15px !important;
            padding: 0 15px 5px 5px !important;
            width: 96% !important;
        }

        span.input-icon {
            display: inline-block;
            margin: 15px 15px 0;
        }

        .input-icon {
            position: relative;
        }

            .input-icon > .ace-icon {
                padding: 0 3px;
                z-index: 2;
                position: absolute;
                top: 1px;
                bottom: 1px;
                left: 3px;
                line-height: 30px;
                display: inline-block;
                color: #909090;
                font-size: 16px;
            }

        .ace-icon {
            text-align: center;
        }

        .input-icon > input {
            padding-left: 24px;
            padding-top: 4px;
        }
    </style>
}

@section scripts {

@Scripts.Render("~/Content/dx/js/date-time/moment.js")
@Scripts.Render("~/Content/dx/js/date-time/daterangepicker.js")
@Scripts.Render("~/Content/dx/js/date-time/bootstrap-datepicker.js")

<script>
    var startDate = moment().startOf('month');
    var endDate = moment();    

    $(function() {
        $('#dm-daterange').val(startDate.format('MM/DD/YYYY') + ' - ' + endDate.format('MM/DD/YYYY'));

        $('#dm-daterange').daterangepicker({
            "timePickerIncrement": 1,
            "startDate": startDate,
            "endDate": endDate,
            "dateLimit": { "days": 730 },
            "opens": "right",
            "drops": "down",
            "buttonClasses": "btn btn-sm",
            "applyClass": "btn-base",
            "cancelClass": "btn-light"
        }, function(start, end, label) {
            $('#dm-daterange').html(start.format('MM/DD/YYYY') + ' - ' + end.format('MM/DD/YYYY'));
        });
    });

    function download(source, url) {
            $(source).attr("disabled", "disabled");
            setTimeout('enableAllButtons()', 1000);
            var daterange = $('#dm-daterange').val();
            location.href = url.replace('dt', daterange);
        }

        function enableAllButtons() {
            $(":button").removeAttr("disabled");
        }

</script>
}

@using IDC.LeadCapture.BLL
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="index, follow">
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/assets/img/idc.png" type="image/png">
    <!-- Web Fonts -->
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans:400,300,600&amp;subset=cyrillic,latin">
    @Styles.Render("~/assets/css")
<!--[if lt IE 9]><link rel="stylesheet" href="@Url.Content("~/Assets/plugins/sky-forms-pro/skyforms/css/sky-forms-ie8.css")"><![endif]-->

    <style>
        #noscript-msg {
            display: none;
        }

        #nocookie-msg {
            display: none;
        }

        .warning {
            background-color: #EEEEEE;
            border: solid 2px #BFC373;
            box-sizing: border-box;
            ms-box-sizing: border-box;
            webkit-box-sizing: border-box;
            moz-box-sizing: border-box;
            padding: 10px;
            width: 698px;
        }

        div.warning h3 {
            font-size: 13pt !important;
            margin: 0 0 10px 0 !important;
        }

        div.warning p {
            font-size: 10pt;
            max-width: 100%;
        }

        #cta {
            position: absolute;
            left: 13px;
            top: 545px;
            z-index: 1;
            padding: 20px;
            width: 770px;
            height: 200px;
            background-color: rgb(255, 255, 255); /* Fallback for old browsers */
            background-color: rgba(250, 250, 250, 0.9);
            vertical-align: middle;
        }

        #cta-btns {
            position: absolute;
            right: 13px;
            top: 545px;
            z-index: 1;
            padding: 45px 0px 15px 0px;
            width: 217px;
            height: 200px;
            background-color: rgb(255, 255, 255); /* Fallback for old browsers */
            background-color: rgba(250, 250, 250, 0.9);
            text-align: center;
        }
    </style>
</head>
<body>
    <noscript>
        <style>
            #noscript-msg {
                display: block;
            }

            #cta-btns {
                display: none;
            }
        </style>
        <div id="noscript-msg" class="warning">
            @Html.Raw(ResourceCache.Localize("Warning_noscript_nocookie"))
        </div>
    </noscript>

    <div id="nocookie-msg" class="warning">
        @Html.Raw(ResourceCache.Localize("Warning_noscript_nocookie"))
    </div>

    <div class="wrapper">
        <div class="header">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <a class="logo" href="#">
                            <img class="shrink-logo" src="~/Content/images/logo-idc-large.png" alt="Logo" style="height:60px;">
                        </a>
                    </div>
                    <div class="col-md-6">
                        <div class="topbar" style="padding-top:5px;">
                            <h1>@ResourceCache.Localize("layout_header")</h1>
                            <h4 style="font-style:italic; margin-left:10px; line-height:1.1">@ResourceCache.Localize("layout_header1")</h4>
                        </div>
                    </div>
                </div>
                <br>
            </div>
        </div>
        <br>
        <div class="container">
            <div class="banner-image">
                <div class="ribbon left_ribbon">
                    <img src="~/Content/images/ricoh-ic-vector.png" style="height:70px;">
                </div>
            </div>
        </div>

        <div class="container">
            <br />
            <div class="log-reg-v3 content-md">
                @RenderBody()
            </div>
            <br>
        </div>

        <div class="footer-v2">
            <div class="copyright">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <p>
                                <a href="#">@ResourceCache.Localize("Terms of Use")</a> | <a href="#">@ResourceCache.Localize("Disclaimer")</a>
                            </p>
                        </div>
                        <div class="col-md-3"></div>
                        <div class="col-md-3">@ResourceCache.Localize("Powered by")<img src="~/Content/images/logo-idc.png" height="30" style="margin-left:20px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
            @Scripts.Render("~/bundles/modernizr")
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/assets/bootstrap")
            @Scripts.Render("~/bundles/assets/sky-forms")
            @Scripts.Render("~/bundles/assets/plugins")
 
            <!--[if lt IE 9]>
                <script src="@Url.Content("~/Assets/plugins/sky-forms-pro/sky-forms/js/sky-forms-ie8.js")"></script>
            <![endif]-->
            <!--[if lt IE 10]>
                <script src="@Url.Content("~/Assets/plugins/sky-forms-pro/sky-forms/js/jquery.placeholder.min.js")"></script>
            <![endif]-->
            @RenderSection("scripts", required: false)
</body>
</html>

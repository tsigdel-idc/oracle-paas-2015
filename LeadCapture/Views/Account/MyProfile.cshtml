@using IDC.LeadCapture.BLL
@model IDC.LeadCapture.Models.Account.User
@{
    ViewBag.Title = ResourceCache.Localize("DX | My Profile");
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="slice bg-white">
    <div class="wp-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title-wr style-3">
                        <h3 class="section-title left"><span>@ResourceCache.Localize("My Profile")</span></h3>

                    </div>
                    <p><font color="red">*</font> @ResourceCache.Localize("required_field_msg")</p>
                    <hr>
                    <ul class="list-check">
                        <li class="h5"><i class="fa fa-envelope-o"></i> <strong>@ResourceCache.Localize("Email:")</strong> @Model.Email</li>
                        <li class="h5"><i class="fa fa-gears"></i> <strong>@ResourceCache.Localize("Account Type:")</strong> @ResourceCache.Localize(Model.AccountType)</li>
                    </ul>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h5>@ResourceCache.Localize("Update Profile")</h5>
                    @using (Html.BeginForm("_updateUserProfile", "Account", FormMethod.Post, new { @class = "sky-form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-body">
                            <div class="form-group">
                                <section>
                                    <label class="label">@ResourceCache.Localize("First name") <font color="red">*</font></label>
                                    <label class="input">
                                        <i class="icon-append fa fa-user"></i>
                                        @Html.TextBoxFor(m => m.FirstName, new { @maxlength = "80" })
                                    </label>
                                </section>
                                <section>
                                    <label class="label">@ResourceCache.Localize("Last name") <font color="red">*</font></label>
                                    <label class="input">
                                        <i class="icon-append fa fa-user"></i>
                                        @Html.TextBoxFor(m => m.LastName, new { @maxlength = "80" })
                                    </label>
                                </section>
                                <a href="@Url.Action("Index", "Admin")" class="btn btn-icon btn-base fa-chevron-left" style="min-width:150px;padding-right:30px;"><span>@ResourceCache.Localize("navigation_back_en")</span></a>
                                &nbsp;&nbsp;
                                <a href="#" onclick="submit(event, this);" class="btn btn-base btn-icon btn-icon-right fa-cog" style="min-width:150px;padding-left:20px;"><span>@ResourceCache.Localize("Save")</span></a>
                            </div>
                        </div>
                    }
                    <hr>
                    <h5>@ResourceCache.Localize("Change Password")</h5>
                    @using (Html.BeginForm("_changePassword", "Account", FormMethod.Post, new { @class = "sky-form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-body">
                            <div class="form-group">
                                <section>
                                    <label class="label">@ResourceCache.Localize("Current Password") <font color="red">*</font></label>
                                    <label class="input">
                                        <i class="icon-append fa fa-lock"></i>
                                        @Html.PasswordFor(m => m.Password, new { @maxlength = "80" })
                                    </label>
                                </section>
                                <section>
                                    <label class="label">@ResourceCache.Localize("New Password") <font color="red">*</font></label>
                                    <label class="input">
                                        <i class="icon-append fa fa-lock"></i>
                                        @Html.PasswordFor(m => m.NewPassword, new { @maxlength = "80" })
                                    </label>
                                </section>
                                <section>
                                    <label class="label">@ResourceCache.Localize("New Password Confirm") <font color="red">*</font></label>
                                    <label class="input">
                                        <i class="icon-append fa fa-lock"></i>
                                        @Html.PasswordFor(m => m.NewPasswordConfirm, new { @maxlength = "80" })
                                    </label>
                                </section>
                                <a href="@Url.Action("Index", "Admin")" class="btn btn-icon btn-base fa-chevron-left" style="min-width:150px;padding-right:30px;"><span>@ResourceCache.Localize("navigation_back_en")</span></a>
                                &nbsp;&nbsp;
                                <a href="#" onclick="submit(event, this);" class="btn btn-base btn-icon btn-icon-right fa-lock" style="min-width:150px;"><span>@ResourceCache.Localize("Update Password")</span></a>
                            </div>
                        </div> 
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script>
        $(function () {
            $("#Email").rules("add", { required: true, email: true, messages: { required: $("#Validation").attr('requiredMsg'), email: $("#Validation").attr('emailMsg') } });
            $("#FirstName").rules("add", { required: true, messages: { required: $("#Validation").attr('firstNameMsg') } });
            $("#LastName").rules("add", { required: true, messages: { required: $("#Validation").attr('lastNameMsg') } });
            $("#Password").rules("add", { required: true, messages: { required: $("#Validation").attr('passwordMsg') } });
            $("#NewPassword").rules("add", { required: true, messages: { required: $("#Validation").attr('newPasswordMsg') } });
            $("#NewPasswordConfirm").rules("add", { required: true, messages: { required: $("#Validation").attr('newPasswordConfirmMsg') } });
        });
    </script>
}